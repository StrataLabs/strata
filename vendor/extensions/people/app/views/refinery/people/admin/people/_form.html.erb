<%= form_for [refinery, :people_admin, @person] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @person,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :designation -%>
    <%= f.text_field :designation -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:profile],
                :object => "people/person" -%>
  </div>

  <div class='field'>
    <%= f.label :joined_on -%>
    <%= f.date_select :joined_on -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @person.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :team -%>
    <%= f.text_field :team -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.people.admin.people.person'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @person.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
