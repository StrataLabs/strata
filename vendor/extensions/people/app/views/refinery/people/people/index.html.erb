<%= render 'refinery/pages/company_sub_nav' %>

<section id="body_content">
  <section id="body">
    <div id="people">
      <% @people.each do |person| %>
      <div class="person">
        <%= image_fu person.photo, "200x200", class: "image-align-#{cycle("left", "right")}" %>
        <h2><%= person.name %></h2>
        <%=raw person.profile %>
      </div>
      <% end %>
    </div>
  </section>
</section>